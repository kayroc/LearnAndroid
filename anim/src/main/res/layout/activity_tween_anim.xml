<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/iv_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_together_java"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_together_xml"
        app:srcCompat="@drawable/android2" />

    <TextView
        android:id="@+id/tv_translate_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="平移(xml)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_rotate_xml"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rotate_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="旋转(xml)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_translate_xml"
        app:layout_constraintEnd_toStartOf="@+id/tv_scale_xml"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_translate_xml"
        app:layout_constraintTop_toTopOf="@+id/tv_translate_xml" />

    <TextView
        android:id="@+id/tv_scale_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="缩放(xml)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_translate_xml"
        app:layout_constraintEnd_toStartOf="@+id/tv_alpha_xml"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_rotate_xml"
        app:layout_constraintTop_toTopOf="@+id/tv_translate_xml" />

    <TextView
        android:id="@+id/tv_alpha_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="透明(xml)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_translate_xml"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_scale_xml"
        app:layout_constraintTop_toTopOf="@+id/tv_translate_xml" />

    <TextView
        android:id="@+id/tv_together_xml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="一起动(xml)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_alpha_xml"
        app:layout_constraintStart_toStartOf="@+id/tv_translate_xml"
        app:layout_constraintTop_toBottomOf="@+id/tv_translate_xml" />

    <TextView
        android:id="@+id/tv_translate_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="平移(java)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_rotate_java"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_rotate_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="旋转(java)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_translate_java"
        app:layout_constraintEnd_toStartOf="@+id/tv_scale_java"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_translate_java"
        app:layout_constraintTop_toTopOf="@+id/tv_translate_java" />

    <TextView
        android:id="@+id/tv_scale_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="缩放(java)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_translate_java"
        app:layout_constraintEnd_toStartOf="@+id/tv_alpha_java"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_rotate_java"
        app:layout_constraintTop_toTopOf="@+id/tv_translate_java" />

    <TextView
        android:id="@+id/tv_alpha_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="透明(java)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_translate_java"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_scale_java"
        app:layout_constraintTop_toTopOf="@+id/tv_translate_java" />

    <TextView
        android:id="@+id/tv_together_java"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="一起动(java)"
        android:textColor="@color/selector_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_translate_java"
        app:layout_constraintEnd_toEndOf="@+id/tv_alpha_java"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_translate_java" />
</androidx.constraintlayout.widget.ConstraintLayout>